source :rubygems

gem 'rails', '3.2.11'
gem 'rack', '1.4.1'

# Database
gem 'sqlite3'

# Front-end
gem 'jquery-rails'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'

  # See https://github.com/sstephenson/execjs#readme for more supported runtimes
  # gem 'therubyracer', :platforms => :ruby
end

group :development, :test do
  # .env loading (to simulate Heroku locally)
  gem 'dotenv'

  # Testing
  gem 'rspec-rails'
  gem 'capybara'

  gem 'debugger'
end
